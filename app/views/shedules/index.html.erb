<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title">Current Lab Referrals Issued</h3>
                      </div>
                      <div class="panel-body">
                        <%= link_to 'Add New', new_shedule_path %>

                        <table class="table table-bordered">
                          <thead>
                            <th>Type</th>
                            <th>User</th>
                            <th>First Due</th>
                            <th>Recurrences</th>
                          </thead>
                          <% @shedules.each do |shedule| %>
                            <tr>
                              <td><%= link_to edit_shedule_path(shedule) do %><%= shedule.lab_type && shedule.lab_type.name %><% end %></td>
                              <td><%= shedule.user && shedule.user.email %></td>
                              <td><%= shedule.due_date %></td>
                              <td><%= shedule.max_recurrences %></td>
                            </tr>
                          <% end %>
                        </table>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
