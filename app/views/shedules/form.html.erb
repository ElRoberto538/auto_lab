<%= form_for @shedule do |f| %>
<div class="container">

  <div class="row">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Biochemistry</h3>
          </div>
          <div class="panel-body">
              <div class="form-group">
                <div class="col-sm-10">
                  <div class="checkbox">
                    <%= check_box 'shedule[tests]', '[glucose_tolerance]' %>
                    <%= label 'shedule[tests]', '[glucose_tolerance]', 'Diabetes - Glucose Tolerance Test' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <div class="checkbox">
                    <%= check_box 'shedule[tests]', '[digoxin]' %>
                    <%= label 'shedule[tests]', '[digoxin]', 'Drugs - Digoxin' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <div class="checkbox">
                    <div class="checkbox">
                      <%= check_box 'shedule[tests]', '[fsh]' %>
                      <%= label 'shedule[tests]', '[fsh]', 'Hormones - FSH' %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <div class="checkbox">
                    <%= check_box 'shedule[tests]', '[alkaline_phos]' %>
                    <%= label 'shedule[tests]', '[alkaline_phos]', 'Liver/Enzymes - Alkaline Phos' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <div class="checkbox">
                    <div class="checkbox">
                      <%= check_box 'shedule[tests]', '[glucose_tolerance]' %>
                      <%= label 'shedule[tests]', '[glucose_tolerance]', 'Glucose Tolerance' %>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Frequency Settings</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
                <%= f.label :lab_type_id, 'Lab Type' %><br/>
                <%= f.select :lab_type_id, LabType.all.map {|lab| [lab.name, lab.id]} %>
          </div>
          <div class="form-group">
            <%= f.label :due_date %><br/>
            <%= f.date_select :due_date %>
          </div>
          <div class="form-group">
            <%= f.label :max_recurrences %><br/>
            <%= f.select :max_recurrences, options_for_select([['One Off', "0"], ["Monthly", "1"], ["3 Monthly", "3"], ["6 Monthly", "6"]])%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-md-6">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
  </div>
</div>
<% end %>
